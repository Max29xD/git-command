---
interface Props {
  title: string
  body: string
  href: string
}

const { href, title, body } = Astro.props
---

<li class="flex rounded-lg bg-neutral-950 p-px shadow-md shadow-purple-500">
  <a
    href={href}
    class="w-full rounded-lg bg-neutral-900 p-4"
  >
    <h2 class="text-xl transition-colors duration-300">
      {title}
      <span>&rarr;</span>
    </h2>
    <p class="mt-2">
      {body}
    </p>
  </a>
</li>
